                     </artifactItems>
                  </configuration>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <id>package</id>
                  <phase>package</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
                        <unzip src="target/${project.artifactId}-${project.version}.war" dest="target/war" />
                        <delete dir="target/war/WEB-INF/classes/com/coogasales/gui" />
                        <delete dir="target/war/work" />
                        <delete dir="target/war/META-INF" />
                        <delete>
                           <fileset dir="target/war/WEB-INF/lib" includes="gwt-user*,smartgwt-skin*,coogasales-webapp*,gwtevent*,guava-14*" />
                        </delete>
                        <copy file="src/main/resources/context.properties" tofile="target/war/WEB-INF/classes/context.properties" overwrite="true" />
                        <unzip dest="target/war">
                           <fileset dir="target/war">
                              <include name="*-plugin.zip" />
                           </fileset>
                        </unzip>
                        <delete>
                           <fileset dir="target/war">
                              <include name="*-plugin.zip" />
                           </fileset>
                        </delete>
                        <zip destfile="target/${project.artifactId}-${project.version}.war" basedir="target/war" />
                     </tasks>
                  </configuration>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <version>2.1.1</version>
            <configuration>
               <excludes>**/.svnignore</excludes>
               <excludes>WEB-INF/classes/**</excludes>
               <excludes>WEB-INF/lib/*.jar</excludes>
               <archive>
                  <addMavenDescriptor>false</addMavenDescriptor>
               </archive>
            </configuration>
         </plugin>
         
         
